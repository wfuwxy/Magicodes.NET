
        @model Magicodes.Web.Interfaces.Config.Info.SiteConfigInfo


@{
    ViewBag.Title = "站点信息配置";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>站点信息配置</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("配置管理", "Index")
            </li>
            <li class="active">
                <strong>站点信息配置</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <input type="button" value="保存" class="btn btn-primary" onclick="$('form').submit();" />
			@Html.ActionLink("取消", "Index", null, new { @class = "btn btn-white"})
